{
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "jsdoc",
    "json",
    "security"
  ],
  "root": true,
  "rules": {
    "jsdoc/check-types": "error",
    "security/detect-non-literal-fs-filename": "off",
    "security/detect-object-injection": "off",

    "no-console": "off",
    "eqeqeq": "error",
    "indent": ["error", 2, {"SwitchCase": 1, "VariableDeclarator": {"var": 2, "let": 2, "const": 3}}],
    "linebreak-style": ["error", "unix"],
    "no-var": "off",
    "no-warning-comments": "warn",
    "prefer-const": "off",
    "quotes": ["error", "double"],
    "require-jsdoc": "off",
    "semi": ["error", "always"],
    "valid-jsdoc": "error"
  }
}
